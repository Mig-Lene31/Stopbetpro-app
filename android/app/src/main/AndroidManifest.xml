<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="StopBet Pro"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">

        <!-- ENTRADA ÚNICA -->
        <activity
            android:name=".GateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TELAS -->
        <activity android:name=".InfoActivity" />
        <activity android:name=".AuthLockActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LockScreenActivity" />

        <!-- ADMIN -->
        <activity android:name=".AdminLoginActivity" />
        <activity android:name=".AdminActivity" />

        <!-- CONFIGURAÇÕES -->
        <activity android:name=".LimitsActivity" />
        <activity android:name=".TimeActivity" />
        <activity android:name=".DepositActivity" />

        <!-- SERVIÇO CORAÇÃO -->
        <service
            android:name=".StopHeartService"
            android:exported="false" />

        <!-- VPN -->
        <service
            android:name=".BetBlockVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <!-- ACESSIBILIDADE -->
        <service
            android:name=".BalanceReadAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service>

    </application>

</manifest>
