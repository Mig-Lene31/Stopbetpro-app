<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stopbet.app">

    <application
        android:allowBackup="true"
        android:label="StopBet Pro"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">

        <!-- TELA INICIAL -->
        <activity
            android:name=".GateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ADMIN -->
        <activity android:name=".AdminActivity" />

        <!-- APP PRINCIPAL -->
        <activity android:name=".MainActivity" />

        <!-- BLOQUEIO (TELA AZUL) -->
        <activity android:name=".BlockedActivity" />

        <!-- CONFIGURAÇÕES -->
        <activity android:name=".LimitsActivity" />
        <activity android:name=".TimeActivity" />
        <activity android:name=".InfoActivity" />

        <!-- OUTRAS TELAS -->
        <activity android:name=".PaymentActivity" />
        <activity android:name=".DepositActivity" />
        <activity android:name=".RulesActivity" />
        <activity android:name=".UnlockActivity" />
        <activity android:name=".BootActivity" />

        <!-- VPN LOCAL (BLOQUEIO DE APOSTAS) -->
        <service
            android:name=".BetBlockVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <!-- LEITURA DE SALDO (ACESSIBILIDADE) -->
        <service
            android:name=".BalanceReadAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service>

    </application>

</manifest>
