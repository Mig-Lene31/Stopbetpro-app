<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="StopBet Pro"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">

        <!-- ENTRADA DO APP -->
        <activity
            android:name=".GateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TELAS PRINCIPAIS -->
        <activity android:name=".InfoActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LimitsActivity" />
        <activity android:name=".TimeActivity" />
        <activity android:name=".BlockedActivity" />
        <activity android:name=".DepositActivity" />
        <activity android:name=".RulesActivity" />
        <activity android:name=".UnlockActivity" />

        <!-- ADMIN -->
        <activity android:name=".AdminActivity" />
        <activity android:name=".AdminLoginActivity" />

        <!-- PROTEÇÃO -->
        <activity android:name=".EnableProtectionActivity" />

        <!-- VPN LOCAL -->
        <service
            android:name=".BetBlockVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <!-- ACESSIBILIDADE (LEITURA DE SALDO) -->
        <service
            android:name=".BalanceReadAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service>

    </application>

</manifest>
